@model WebTools.Requests.CreditCard.CreateCreditCardRequest
<div class="container">
    <form action="Create" method="post">
        <div class="mb-3">
            <label for="@Model.Name">Name</label>
            <input type="text" asp-for="@Model.Name" class="form-control"/>
        </div>
        <div class="mb-3">
            <label for="@Model.Limit">Limit</label>
            <input type="number" asp-for="@Model.Limit" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="@Model.DueDate">Due Date</label>
            <input type="date" asp-for="@Model.DueDate" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="@Model.PaymentDay">Payment Date</label>
            <input type="date" asp-for="@Model.PaymentDay" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="@Model.Color">Color</label>
            <input type="color" asp-for="@Model.Color" class="form-control" />
        </div>
        <input type="submit" value="Create" class="btn btn-success"/>
    </form>
</div>