@model WebTools.Requests.CreditCard.EditCreditCardRequest
<div class="container">
    <form asp-action="Save" method="post">
        <div class="mb-3">
            <label for="@Model.Name">Name</label>
            <input type="text" asp-for="@Model.Name" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="@Model.Limit">Limit</label>
            <input type="number" asp-for="@Model.Limit" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="@Model.DueDate">Due Date</label>
            <input type="date" asp-for="@Model.DueDate" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="@Model.PaymentDay">Payment Date</label>
            <input type="date" asp-for="@Model.PaymentDay" class="form-control" />
        </div>
        <div class="mb-3">
            <label for="@Model.Color">Color</label>
            <input type="color" asp-for="@Model.Color" value="" class="form-control" />
        </div>
        <input type="hidden" asp-for="@Model.id"/>
        <input type="submit" value="Save" class="btn btn-success" />
    </form>
</div>
<script>
    function rgbToHexadecimal(red, green, blue) {
        return "#" + (1 << 24 | red << 16 | green << 8 | blue).toString(16).slice(1);
    }
    document.querySelector("input[type=color]").value = rgbToHexadecimal(@Model.Color.R, @Model.Color.G, @Model.Color.B)
</script>